<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:maps="http://schemas.microsoft.com/dotnet/2021/maui/maps"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PM2E2GRUPO2.Views.MapPage"
              Title="Vista Mapa">
    <ContentPage.Content>
        <StackLayout Padding="10,0" Spacing="10">
            <maps:Map
                x:Name="map"
                WidthRequest="370"
                HeightRequest="650"
                IsShowingUser="True"/>

            <Button Text="Navegar"
                x:Name="btnNavegar"
                WidthRequest="150"
                Margin="20, 0, 20, 20"
                HorizontalOptions="Center"
                Clicked="OnNavigateClicked"
                />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>

