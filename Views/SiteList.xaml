<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PM2E2GRUPO2.Views.SiteList"
             Title="Sitios">
    <StackLayout>
        <SearchBar Placeholder="Buscar"
                   TextChanged="OnSearchBarTextChanged"
                   Margin="0,5,0,5"/>

        <ListView x:Name="siteList"
                  HasUnevenRows="True"
                  HeightRequest="550"
                  ItemTapped="OnSeleccionarElemento"
                  >
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Grid HeightRequest="50">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="40" />
                                <ColumnDefinition Width="40" />
                                <ColumnDefinition Width="40" />
                            </Grid.ColumnDefinitions>
                           
                            <StackLayout Grid.Column="0" Margin="0,10,0,0">
                                <Label Text="{Binding Descripcion}" FontSize="Small"/>
                            </StackLayout>

                            <Button
                                 Text="🎥"
                                 BackgroundColor="Transparent"
                                 Clicked="OnPlayVideoClicked"
                                 Grid.Column="1"/>
                            <Button
                                 Text="🎙️"
                                 BackgroundColor="Transparent"
                                 Clicked="OnPlayAudioClicked"
                                 Grid.Column="2"/>

                            <Button 
                                 Text="📍"
                                 BackgroundColor="Transparent"
                                 Clicked="OnLocationClicked"
                                 Grid.Column="3"
                            />

                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <HorizontalStackLayout Spacing="25" HorizontalOptions="Center" Margin="0,-15,0,15">

            <Button 
                 Text="✏️ Actualizar"
                Clicked="OnActualizarClicked"
                 BackgroundColor="#34c759"/>

            <Button 
                  Text="🗑️ Eliminar"
                  Clicked="OnEliminarClicked"
                  BackgroundColor="#ff9500"/>

        </HorizontalStackLayout>

    </StackLayout>
</ContentPage>